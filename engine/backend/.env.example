# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Python Configuration
PYTHON_VERSION=3.10

# CORS Origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_SECRET_KEY=your-secret-key-here-change-in-production

# File Upload
MAX_FILE_SIZE_MB=50

# Optional: Redis for session storage (production)
# REDIS_URL=redis://localhost:6379

# Optional: Database (future feature)
# DATABASE_URL=postgresql://user:pass@localhost/biotuner

# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: AWS S3 for file storage (production scale)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_BUCKET_NAME=biotuner-uploads
